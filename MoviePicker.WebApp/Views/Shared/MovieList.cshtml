@model MoviePicker.Common.MovieList

<div class="col-sm-3">
	<h4>Total Cost (BUX): @Model.TotalCost</h4>
</div>
<div class="col-sm-6">
	<h4>Total Earnings: $@Model.TotalEarnings.ToString("N0")</h4>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>BUX</th>
			<th>Movie</th>
			<th style="text-align: right">Earnings</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var pick in Model.Movies)
		{
			var rankStyle1 = pick.IsBestPerformer ? "text-align: right; font-weight: bold; color: #33cc33" : "text-align: right";

			<tr>
				<td style="text-align: right">@pick.Cost</td>
				<td>@pick.Name</td>
				<td style="@rankStyle1">@string.Format("$ {0:N0}{1}", pick.Earnings, pick.IsBestPerformer ? " *" : string.Empty)</td>
			</tr>
			}
	</tbody>
</table>