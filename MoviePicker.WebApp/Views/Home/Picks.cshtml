@model MoviePicker.WebApp.Models.PicksViewModel

@{
	ViewBag.Title = "Picks";
}
<h2>@ViewBag.Title</h2>


<table class="table">
	<thead>
		<tr><th>Miner Weights</th></tr>
		<tr>
			@foreach (var miner in Model.Miners)
			{
				<th>
					@miner.Abbreviation
				</th>
			}
		</tr>

	</thead>
	<tbody>
		<tr>
			@foreach (var miner in Model.Miners)
			{
				<td>
					@if (miner.Movies?.Count > 0)
				{
						<a href="@Model.GetFMLNerdLink(miner)" class="btn btn-info btn-sm">Analyze</a>
				}
				</td>
			}
		</tr>
		<tr>
			@foreach (var miner in Model.Miners)
			{
				<th>
					@miner.Weight
				</th>
			}
		</tr>
	</tbody>
</table>

@* TODO: Should turn this into a partial view... *@

<h4>Total Cost (BUX): @Model.MovieList.TotalCost</h4>
<h4>Total Earnings: $@Model.MovieList.TotalEarnings.ToString("N0")</h4>
<h4>Bonus is ON</h4>

<table class="table">
	<thead>
		<tr>
			<th>BUX</th>
			<th>Movie</th>
			<th style="text-align: right">Earnings</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var pick in Model.MovieList.Movies)
		{
			<tr>
				<td>@pick.Cost</td>
				<td>@pick.Name</td>
				<td style="text-align: right">$@pick.Earnings.ToString("N0")</td>
			</tr>
		}
	</tbody>
</table>


<h4>Total Cost (BUX): @Model.MovieListBonusOff.TotalCost</h4>
<h4>Total Earnings: $@Model.MovieListBonusOff.TotalEarnings.ToString("N0")</h4>
<h4>Bonus is OFF</h4>

<table class="table">
